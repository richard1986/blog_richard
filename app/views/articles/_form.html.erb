<div class="col-sm-12">
  <div class="row show-grid">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for(@article, class: 'bs-example') do |f| %>
        <% if @article.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

            <ul>
            <% @article.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <%= f.text_field :title, autocomplete: "off", placeholder: "The author may add here de article tile", class: "form-control" %>
        <%= f.text_area :description, autocomplete: "off", placeholder: "The author may add here de article description", class: "form-control", rows: "3" %>
        <%= f.button "Save Article &nbsp;<span class=\"glyphicon glyphicon-floppy-disk\"></span>".html_safe, class: "btn btn-lg btn-primary btn-block" %>
      <% end %>
