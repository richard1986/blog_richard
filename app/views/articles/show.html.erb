<%= render 'partials/notices' %>
<h1 class="page-header"><p class="text-center"><%= @article.title %></p></h1>
<div class="col-sm-12">
  <div class="row show-grid">
    <div class="col-md-10 col-md-offset-1">       
      <div class="thumbnail"> 
        <img data-src="holder.js/100%x200" alt="100%x200" src="data:image/svg+xml;base64," data-holder-rendered="true" style="height: 200px; width: 100%; display: block;"> 
          <div class="caption"> 
            <h3><%= @article.title %></h3> 
              <p>
                <%= @article.description %>
              </p> 
              <p>
                <h5 class="page-header">Author: <%= @article.account.fullname %></h1>
                Number of visits: <%= @article.visits_count %> 
              </p> 
          </div> 
      </div> 
    </div>
  </div>
</div>
<div class="bs-example" data-example-id="horizontal-dl">
  <%= render "comments/form" %>  
  <% @article.comments.each do |c|%>
    <div class="media">
      <div class="media-left"> 
        <a href="#"> 
          <img class="media-object" data-src="holder.js/64x64" alt="64x64" src="data:image/svg+xml;base64," data-holder-rendered="true" style="width: 64px; height: 64px;"> 
        </a> 
      </div> 
      <div class="media-body"> 
        <h4 class="media-heading"><%= c.account.fullname %></h4> 
        <%= c.description %> 
      </div>
    </div> 
  <% end %> 
  
</div>
<div class="row show-grid">
  <div class="col-md-10 col-md-offset-1">
    <div class="btn-group" role="group" aria-label="Basic example">
      <%= link_to '<span class="glyphicon glyphicon-pencil"></span>&nbsp;Edit'.html_safe, edit_article_path(@article), class: "btn btn-warning" %>
      <%= link_to '<span class="glyphicon glyphicon-chevron-left"></span>&nbsp;Back'.html_safe, articles_path, class: "btn btn-danger" %>
    </div>
  </div>
</div>
