- options= ['Fullname', 'Phone', 'User']
= smart_listing_controls_for(:accounts, {class: "form-inline text-right"}) do
	.form-group.filter.input-append
		= text_field_tag :textsearch, '', class: "search form-control", placeholder: "Search...",autocomplete: :off
		= select_tag :type, options_for_select(options), :disabled => false, class: "form-control"
	%button.btn.btn-primary.disabled{type: :submit}
		%span.glyphicon.glyphicon-search

%h1.page-header Listing Accounts
%h2= (link_to 'New Account', new_account_path, class: "btn btn-success")
= smart_listing_render(:accounts)

