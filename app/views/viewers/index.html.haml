- options= ['userAgent', 'ipClient']
= smart_listing_controls_for(:viewers, {class: "form-inline text-right"}) do
	.form-group.filter.input-append
		= text_field_tag :textsearch, '', class: "search form-control", placeholder: "Search...",autocomplete: :off
		= select_tag :type, options_for_select(options), :disabled => false, class: "form-control"
	%button.btn.btn-primary.disabled{type: :submit}
		%span.glyphicon.glyphicon-search

%h2= (link_to 'New Viewer', new_viewer_path, class: "btn btn-success")
%h1.page-header Listing Viewers
= smart_listing_render(:viewers)

